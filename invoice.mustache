<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<link rel="stylesheet" type="text/css" href="invoice_style.css">
	</head>
	<body>
		<div id="header">
			<div id="header-top">
				<div id="header-left">
					<div id="logo">
						<img src="logo.png" width="159" height="72">
						<!-- <h1>{{companyName}}</h1> -->
					</div>
					<div id="address">
						<p><b>Fakturaadress:</b></p>
						<p>{{customerName}}
						<p>{{customerStreet}}
						<p>{{customerPostal}} {{customerCity}}
					</div>
				</div>

				<div id="header-right">
					<div id="header-right-top" class="header-box full-fill">
						<h2>Faktura</h2>
					</div>
					<div id="header-right-bottom">
						<div id="header-right-bottom-left" class="header-box half-fill">
							Fakturanummer: {{invoiceId}}
						</div>
						<div id="header-right-bottom-right" class="header-box half-fill">
							Fakturadatum: {{invoiceDate}}
						</div>
					</div>
				</div>

			</div> <!-- header-top -->
			<div id="header-bottom">
				<div id="header-bottom-left" class="header-bottom-box">
				</div>
				<div id="header-bottom-right" class="header-bottom-box">
					<!-- Maybe table here.."-->
					<p><b>Er Referens</b>: {{customerRef}}</p>
					<p><b>Vår Referens:</b> {{companyRef}}</p>
					<p><b>Betalningsvilkor:</b> {{paymentTerms}} dagar</p>
					<p><b>Förfallodatum:</b> {{expirationDate}}</p>
				</div>
			</div>
		</div>
		<div id="spec">
			<div id="spec-header">
				<h3 id="specification">Specifikation</h3>
				<hr>
			</div>
			<div id="spec-main">

				<table id="spec-table">
					<thead id="spec-table-head">
						<tr>
							<th>Beskrivning</th>
							<th>Antal</th>
							<th>À pris</th>
							<!--<th>Momssats</th>-->
							<!--<th>Nettopris</th>-->
							<!--<th>Momsbelopp</th>-->
							<th>Belopp</th>
						</tr>
					</thead>
					<tbody>
						{{#aggrProducts}}
						<tr>
							<td>{{description}}</td>
							<td>{{quantity}}</td>
							<td>{{price_no_vat}}</td>
							<!--<td>{{prettyVat}}</td>-->
							<td>{{sumExVat}}</td>
							<!--<td>{{sumVat}} {{currency}}</td>-->
							<!--<td>{{sumInclVat}} {{currency}}</td>-->
						</tr>
						{{/aggrProducts}}
					</tbody>
				</table>
			</div> <!-- spec-main -->

			<div id="spec-footer">
				<table id="sum-table" class="no-border">
					<thead>
						<tr>
							<th>Brutto</th>
							<th>Inkl Moms</th>
							<th>Moms %</th>
							<th>Moms {{currency}}</th>
							<th>ATT BETALA ({{currency}})</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							{{#product_aggr}}
							<td>{{totalExclVat}}</td>
							<td>{{totalSum}}</td>
							<td>25 %</td>
							<td>{{totalVat}}</td>
							<td id="totalSum">{{totalSum}}</td>
							{{/product_aggr}}
						</tr>
					</tbody>
				</table>
				<!--
				{{#product_aggr}}
				<p class="content-footer-box">
				Totalt momsbelopp, 25%: {{totalVat}} {{currency}}
				</p>
				<p class="content-footer-box">
				Att betala: {{totalSum}} {{currency}}
				</p>
				{{/product_aggr}}
				-->
			</div> <!-- spec-footer -->
		</div> <!-- spec -->
		<div id="footer">
			<hr>
			<div id="footer">
				<div id="footer-address">
					<div class="footer-box">
						<p>
							<b>Adress:</b><br>
							{{companyName}}<br>
							{{companyStreet}}<br>
							{{companyPostal}} {{companyCity}}
						</p>
					</div>
				</div>
				<div id="footer-other">
					<div class="block">
						<div class="footer-box">
							<p>
								<b>Telefon:</b><br>
								{{companyMobile}}
							</p>
						</div>
						<div class="footer-box">
							<p>
								<b>E-post:</b><br>
								{{companyEmail}}<br>
								<b>Webb:</b><br>
								{{companyWeb}}
							</p>
						</div>
					</div>
					<div class="block">
						<div class="footer-box">
							<p>
								<b>Bankgiro</b><br>{{companyBankId}}
							</p>
						</div>
						<div class="footer-box">
							<p>
								<b>Org.nummer:</b> {{companyOrgId}}<br>
								<b>Momsregnr:</b> {{companyVatId}}<br>
								Godkänd för F-skatt
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
