<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<link rel="stylesheet" type="text/css" href="invoice_style.css">
	</head>
	<body>
		<div id="header">
			<div id="header-top">

				<div id="header-left">
					<div id="logo">
						<h1>{{companyName}}</h1>
					</div>
					<div id="address">
						<p><b>Fakturaadress:</b></p>
						<p>{{customerName}}
						<p>{{customerStreet}}
						<p>{{customerPostal}} {{customerCity}}
					</div>
				</div>

				<div id="header-right">
					<div id="header-right-top" class="header-box full-fill">
						<h2>Faktura</h2>
					</div>
					<div id="header-right-bottom">
						<div id="header-right-bottom-left" class="header-box half-fill">
							Fakturanummer: {{invoiceId}}
						</div>
						<div id="header-right-bottom-right" class="header-box half-fill">
							Fakturadatum: {{invoiceDate}}
						</div>
					</div>
				</div>

			</div> <!-- header-top -->
			<div id="header-bottom">
				<div id="header-bottom-left" class="header-bottom-box">
				</div>
				<div id="header-bottom-right" class="header-bottom-box">
					<!-- Maybe table here.."-->
					<p><b>Er Referens</b>: {{customerRef}}</p>
					<p><b>Vår Referens:</b> {{companyRef}}</p>
					<p><b>Betalningsvilkor:</b> {{paymentTerms}} dagar</p>
					<p><b>Förfallodatum:</b> {{expirationDate}}</p>
				</div>
			</div>
		</div>
		<div id="spec">
			<div id="spec-header">
				<h3 id="specification">Specifikation</h3>
				<hr>
			</div>
			<div id="spec-main">

				<table id="spec-table">
					<thead id="spec-table-head">
						<tr>
							<th>Beskrivning</th>
							<th>Antal</th>
							<th>À pris</th>
							<!--<th>Momssats</th>-->
							<!--<th>Nettopris</th>-->
							<!--<th>Momsbelopp</th>-->
							<th>Summa</th>
						</tr>
					</thead>
					<tbody>
						{{#products}}
						<tr>
							<td>{{description}}</td>
							<td>{{quantity}}</td>
							<td>{{price_no_vat}} {{currency}}</td>
							<!--<td>{{prettyVat}}</td>-->
							<!--<td>{{sumExVat}} {{currency}}</td>-->
							<!--<td>{{sumVat}} {{currency}}</td>-->
							<td>{{sumInclVat}} {{currency}}</td>
						</tr>
						{{/products}}
					</tbody>
				</table>
			</div> <!-- spec-main -->

			<div id="spec-footer">
				<table id="sum-table" class="no-border">
					<thead>
						<tr>
							<th>Netto</th>
							<th>Exkl Moms</th>
							<th>Moms %</th>
							<th>Moms {{currency}}</th>
							<th>ATT BETALA</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							{{#product_aggr}}
							<td>{{totalSum}}</td>
							<td>{{totalExclVat}}</td>
							<td>25 %</td>
							<td>{{totalVat}}</td>
							<td id="totalSum">{{totalSum}}</td>
							{{/product_aggr}}
						</tr>
					</tbody>
				</table>
				<!--
				{{#product_aggr}}
				<p class="content-footer-box">
				Totalt momsbelopp, 25%: {{totalVat}} {{currency}}
				</p>
				<p class="content-footer-box">
				Att betala: {{totalSum}} {{currency}}
				</p>
				{{/product_aggr}}
				-->
			</div> <!-- spec-footer -->
		</div> <!-- spec -->
		<div id="footer">
			<hr>
			<div id="footer">
				<div class="footer-box">
					<p>
						Adress:<br>
						{{companyName}}<br>
						{{companyStreet}}<br>
						{{companyCity}} {{companyPostal}}
					</p>
				</div>
				<div class="footer-box">
					<p>
						Telefon:<br>
						{{companyPhone}}<br>
						{{companyMobile}}
					</p>
				</div>
				<div class="footer-box">
					<p>
						E-post:<br>
						{{companyEmail}}<br>
						Webb:<br>
						{{companyWeb}}
					</p>
				</div>
				<div class="footer-box">
					<p>
						Org.nummer: {{companyOrgId}}<br>
						Momsregnr: {{companyVatId}}<br>
						Godkänd för F-skatt
					</p>
				</div>
				<div class="footer-box">
					<p>
						Bankgiro: {{companyBankId}}<br>
					</p>
				</div>
			</div>
		</div>
	</body>
</html>
